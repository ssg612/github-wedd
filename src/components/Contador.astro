<script>
var countDownDate = new Date("Dec 16, 2023 16:45").getTime();

var x = setInterval(function() {

	var now = new Date().getTime();

	var distance = countDownDate - now;

	// Time calculations for days, hours, minutes and seconds
	var days = Math.floor(distance / (1000 * 60 * 60 * 24));
	var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
	var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
	var seconds = Math.floor((distance % (1000 * 60)) / 1000);

	// // Output the result in an element with id="countdown1"
	// const countdown : HTMLElement = document.getElementById('countdown') as HTMLElement;
	// countdown.innerHTML = "Faltan: " + days + " d√≠as " + hours + " horas " + minutes + " minutos " + seconds + " segundos ";

	const countDays : HTMLElement = document.getElementById('cd-dias') as HTMLElement
	countDays.innerHTML = days.toString();
	const countHours : HTMLElement = document.getElementById('cd-horas') as HTMLElement
	countHours.innerHTML = hours.toString();
	const countMinutes : HTMLElement = document.getElementById('cd-minutos') as HTMLElement
	countMinutes.innerHTML = minutes.toString();
	const countSeconds : HTMLElement = document.getElementById('cd-segundos') as HTMLElement
	countSeconds.innerHTML = seconds.toString();

